---
interface Props {
	title?: string;
	description?: string;
}

const { title = "You Bewty - Brows & Lashes, Waxing, IPL, Skin Treatments & Spray Tans in Tyabb, Victoria", description = "Professional beauty services in Tyabb, Victoria. Specializing in brows & lashes, female & male waxing, IPL hair reduction, skin treatments, and spray tans. Book online or call 0499 906 968." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en-AU">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:locale" content="en_AU" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css?family=Prompt:100,100italic,200,200italic,300,300italic,regular,italic,500,500italic,600,600italic,700,700italic,800,800italic,900,900italic&subset=latin,latin-ext&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	* {
		box-sizing: border-box;
	}

	html, body {
		margin: 0;
		padding: 0;
		font-family: 'Prompt', Arial, sans-serif;
		font-weight: 400;
		color: #666;
		background-color: #fff;
		line-height: 1.7;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	.container {
		width: 80%;
		max-width: 1080px;
		margin: 0 auto;
		padding: 4%;
	}

	.section {
		padding: 4% 0;
	}

	.text-center {
		text-align: center;
	}

	h1, h2, h3, h4, h5, h6 {
		color: #333;
		margin: 0 0 1em 0;
		font-weight: 600;
	}

	p {
		margin: 0 0 1em 0;
		line-height: 1.7;
	}

	a {
		color: #2ea3f2;
		text-decoration: none;
	}

	a:hover {
		text-decoration: underline;
	}

	/* Responsive */
	@media (max-width: 980px) {
		.container {
			padding: 30px;
		}
		
		.section {
			padding: 30px 0;
		}
	}

	@media (max-width: 767px) {
		.container {
			width: 100%;
			padding: 50px 20px;
		}
		
		.section {
			padding: 50px 0;
		}
	}
</style>
