---
import { SEO } from "astro-seo";
import insideImage from "../assets/inside.png";

interface Props {
	title?: string;
	description?: string;
	image?: string;
	canonical?: string;
	keywords?: string;
}

const { 
	title = "You Bewty - Brows & Lashes, Waxing, IPL, Skin Treatments & Spray Tans in Tyabb, Victoria", 
	description = "Professional beauty services in Tyabb, Victoria. Specializing in brows & lashes, female & male waxing, IPL hair reduction, skin treatments, and spray tans. Book online or call 0499 906 968.",
	image,
	canonical,
	keywords = "beauty salon, eyebrow threading, eyelash extensions, waxing, IPL hair removal, skin treatments, spray tan, beauty services, Tyabb, Mornington Peninsula, Victoria, brow tinting, lash lift, facial treatments, hair removal, cosmetic treatments"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en-AU">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Favicons -->
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="192x192" href="/android-chrome-192x192.png" />
		<link rel="icon" type="image/png" sizes="512x512" href="/android-chrome-512x512.png" />
		
		<SEO
			title={title}
			description={description}
			canonical={canonical}
			openGraph={{
				basic: {
					title: title,
					type: "website",
					image: image || insideImage.src
				},
				optional: {
					description: description,
					locale: "en_AU"
				}
			}}
			twitter={{
				card: "summary_large_image",
				title: title,
				description: description,
				image: image || insideImage.src
			}}
		/>
		
		<!-- Keywords -->
		<meta name="keywords" content={keywords} />
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css?family=Prompt:100,100italic,200,200italic,300,300italic,regular,italic,500,500italic,600,600italic,700,700italic,800,800italic,900,900italic&subset=latin,latin-ext&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	* {
		box-sizing: border-box;
	}

	html, body {
		margin: 0;
		padding: 0;
		font-family: 'Prompt', Arial, sans-serif;
		font-weight: 400;
		color: #666;
		background-color: #fff;
		line-height: 1.7;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	.container {
		width: 80%;
		max-width: 1080px;
		margin: 0 auto;
		padding: 4%;
	}

	.section {
		padding: 4% 0;
	}

	.text-center {
		text-align: center;
	}

	h1, h2, h3, h4, h5, h6 {
		color: #333;
		margin: 0 0 1em 0;
		font-weight: 600;
	}

	p {
		margin: 0 0 1em 0;
		line-height: 1.7;
	}

	a {
		color: #2ea3f2;
		text-decoration: none;
	}

	a:hover {
		text-decoration: underline;
	}

	/* Responsive */
	@media (max-width: 980px) {
		.container {
			padding: 30px;
		}
		
		.section {
			padding: 30px 0;
		}
	}

	@media (max-width: 767px) {
		.container {
			width: 100%;
			padding: 50px 20px;
		}
		
		.section {
			padding: 50px 0;
		}
	}
</style>
